<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CUPIT</title>
    <link rel="stylesheet" href="css/admin/adminlogin.css" />
  </head>
  <body>
    <section>
      <div class="container">
        <div class="user signinBx">
          <div class="imgBx">
            <img
              src="https://images.unsplash.com/photo-1522798514-97ceb8c4f1c8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80"
              alt=""
            />
          </div>
          <div class="formBx">
            <form action="/admin/login" method="post">
              <h2>Sign In</h2>
              <input type="email" placeholder="Email" name="email" required="true">
              <input type="password" placeholder="Password" name="password" required="true">
              <input type="submit" value="Login">
              <p class="signup">
                don't have an account?
                <a href="#" onclick="toggleForm()">Sign up.</a>
              </p>
            </form>
          </div>
        </div>

        <div class="user signupBx">
          <div class="formBx">
            <form action="/admin/register" method="post">
              <h2>Create an account</h2>
              <input type="text" placeholder="Username" name="username" required="true">
              <input type="email" placeholder="Email Address" name="email" required="true">
              <input type="password" placeholder="Create Password" name="password" required="true">
              <input type="password" placeholder="Confirm Password" name="confirmPassword" required="true">
                <input type="submit" value="Sign Up">
              <p class="signup">
                Already have an account?
                <a href="#" onclick="toggleForm()">Sign in.</a>
              </p>
            </form>
          </div>
          <div class="imgBx">
            <img
              src="https://images.unsplash.com/photo-1563911302283-d2bc129e7570?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80"
              alt=""
            />
          </div>
        </div>
      </div>
    </section>
    <script> 
        function toggleForm() {
          section = document.querySelector('section');
          container = document.querySelector('.container');
          container.classList.toggle('active');
          section.classList.toggle('active');
      }
    </script>
  </body>
</html>
